{
	"name": "pitc-revealjs-theme",
	"version": "1.0.0",
	"description": "Revealjs presentation based upon the Puzzle theme",
	"scripts": {
		"reveal-md": "reveal-md . --theme https://puzzle.github.io/pitc-revealjs-theme/latest/puzzle.css",
		"start": "npm run reveal-md -- --watch",
		"static": "npm run reveal-md -- --static",
		"print": "decktape http://localhost:1948/slides.md slides.pdf"
	},
	"devDependencies": {
		"reveal-md": "^5.5.2",
		"decktape": "^3.10.0"
	}
}
